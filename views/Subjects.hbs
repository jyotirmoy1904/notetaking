<html lang ="en">
    <head>
        <meta charset="utf-8">
        <title>NOTES</title>
        <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        <div class="container">
            <h2> NOTES</h2>
            <button class="btn btn-success" data-toggle="modal" data-target="#MyModalAdd"> Add New</button>
            <table class="table table-striped" id="subjecttable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Subject Name</th>
                        <th>Creation Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each results}}
                    <tr>
                        <td>{{ ID }}</td>
                        <td>{{ SubjectName }} </td>
                        <td>{{ CreationDate }}</td>
                        <td>
                            <a href="javascript:void(0);" class="btn btn-sm btn-info edit"  data-SubjectName="{{ SubjectName }}">View</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <!-- Model Add New -->
        <form action="/save" method="post">
        <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"> Add New Subject</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="text" name="SubjectName" class="form-control" placeholder="Subject Name" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div> 
        </div>
        </form>
    <script src="/assets/js/jquery-3.5.1.js"></script>
    <script src="/assets/js/bootstrap.js"></script>


    </body>
</html>